<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="Egg.Shell.FabricType" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <!-- Application Manifest Configuration -->
    <Parameter Name="Egg.Shell.Gallery_InstanceCount" DefaultValue="1" />
    <Parameter Name="Endpoints:Egg.Shell.Gallery" DefaultValue="https://dev.eggshell.dev" />
  </Parameters>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="Egg.Shell.GalleryPkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides />
    <EnvironmentOverrides CodePackageRef="code">
      <EnvironmentVariable Name="EGGSHELL_AppUrlBase" Value="[Endpoints:Egg.Shell.Gallery]" />
      <EnvironmentVariable Name="EGGSHELL_GoogleMapsApiKey" Value="YOUR_KEY" />
    </EnvironmentOverrides>
  </ServiceManifestImport>
  <DefaultServices>
    <!-- The section below creates instances of service types, when an instance of this
         application type is created. You can also create one or more instances of service type using the
         ServiceFabric PowerShell module.

         The attribute ServiceTypeName below must match the name defined in the imported ServiceManifest.xml file. -->
    <Service Name="Egg.Shell.Gallery" ServicePackageActivationMode="ExclusiveProcess">
      <StatelessService ServiceTypeName="Egg.Shell.GalleryType" InstanceCount="[Egg.Shell.Gallery_InstanceCount]">
        <SingletonPartition />
      </StatelessService>
    </Service>
  </DefaultServices>
  <Principals>
    <Users>
      <User Name="ServiceAccount" AccountType="NetworkService" />
    </Users>
  </Principals>
  <Policies>
    <DefaultRunAsPolicy UserRef="ServiceAccount" />
  </Policies>
</ApplicationManifest>