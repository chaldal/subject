{
  "$schema": "http://json.schemastore.org/template",
  "author": "Engineering",
  "classifications": [ "Ecosystem", "F#", "Subject" ],
  "identity": "Ecosystem.Subject",
  "name": "A subject in an ecosystem",
  "shortName": "subject",
  "tags": {
    "language": "F#",
    "type": "project"
  },
  "sourceName": "T__SUITE__T",
  "preferNameDirectory": true,
  "symbols": {
    "ecosystemName": {
      "type": "derived",
      "valueSource": "name",
      "valueTransform": "ValueWithoutSuitePrefix",
      "replaces": "T__EC__T",
      "fileRename": "T__EC__T",
      "dataType": "string"
    },
    "ecosystemInstanceName": {
      "type": "derived",
      "valueSource": "ecosystemName",
      "valueTransform": "FirstLowerCase",
      "replaces": "T__ECI__T",
      "fileRename": "T__ECI__T",
      "dataType": "string"
    },
    "ecosystemLowerCaseName": {
      "type": "derived",
      "valueSource": "ecosystemName",
      "valueTransform": "LowerCase",
      "replaces": "T__ECL__T",
      "fileRename": "T__ECL__T",
      "dataType": "string"
    },
    "subjectName": {
      "type": "parameter",
      "isRequired": true,
      "replaces": "T__LC__T",
      "fileRename": "T__LC__T",
      "description" : "Name of the new subject"
    },
    "subjectInstanceName": {
      "type": "derived",
      "valueSource": "subjectName",
      "valueTransform": "FirstLowerCase",
      "replaces": "T__LCI__T",
      "fileRename": "T__LCI__T",
      "dataType": "string"
    }
  },
  "primaryOutputs": [
    { "path": "T__SUITE__T.sln" }
  ],
  "postActions": [
    {
      "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
      "args": {
        "executable": "dotnet",
        "args": "fsi .subject/subject-added.fsx"
      },
      "manualInstructions": [
        {
          "text": "Add the new subject, life-cycle definition and tests to respective fsproj files; then register the life-cycle definition with EcosystemDef.fs and AllLifeCycles.fs; and then finally delete .subject/.tmp/<SubjectName>.new"
        }
      ],
      "continueOnError": true,
      "description ": "Registers the new subject's lifecycle"
    }
  ],
  "forms": {
    "ValueWithoutSuitePrefix": {
      "identifier": "replace",
      "pattern": "^Suite",
      "replacement": ""
    },
    "LowerCase": {
      "identifier": "lowerCase"
    },
    "FirstLowerCase": {
      "identifier": "firstLowerCaseInvariant"
    }
  }
}